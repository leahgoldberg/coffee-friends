<hr>
<div id="cafe_profile" class="row">
  <div class="small-12 medium-9 medium-centered columns">
    <ul class="accordion" data-accordion>
  <li class="accordion-navigation">
    <a href="#charitable">Charitable Gifts (<%=@charitable_gifts.count%>)</a>
      <% unless @charitable_gifts.count == 0 %>
        <div id="charitable" class="content">
          <div class="add_content_padding">
          <% @charitable_gifts.each do |gift| %>
            <ul class="vcard">
              <li class="fn"><%= gift.name %> </li>
              <br>
              <li class="locality"><%= form_for gift do |f| %>
              <%= f.submit "redeem" %>
              <% end%></li>
            </ul>
            <%end%>
          </div>
        </div>
      <%end%>
    </li>

    <li class="accordion-navigation">
    <a href="#search-wrapper">Unredeemed Gifts (<%=@unredeemed_coffee_gifts.count%>)</a>
        <div id="search-wrapper" class="content">
          <div class="add_content_padding">
           <%= form_tag(@cafe, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Redemption Codes" %>
            <% end %>
            <br>
            <div id= "search-results"></div>
          </div>
        </div>
        </li>
    </ul>

    <div>
      <% if flash[:error] %>
      <% flash[:error].each do |error| %>
        <%= error %>
        <% end %>
      <% end %>
      <ul>
      <% @menu_items.each do |item| %>
        <li><%=item.name%></li>
        <%= form_for item, url: menu_item_path(item) do |f| %>
          <%= f.text_field :price, value: item.price %>
          <%= hidden_field_tag("_method", "put") %>
          <%= f.submit "Edit price" %>
        <% end %>
      <% end %>
      </ul>
    </div>  

    </div>
  </div>

<input type="hidden" value="<%=@cafe.id%>" id="cafe_id">
