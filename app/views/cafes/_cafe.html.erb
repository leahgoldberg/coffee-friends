<%= content_tag :div, class:"cafe_list_div", id:"cafe_div_id_#{cafe.id}" do %>
  <figure>
    <%= cl_image_tag(cafe.image_url, :width => 300, :height => 100, :crop => :fill ) %>
    <figcaption>
      <h4><%=  cafe.name %></h4>
        <div class="cafe_menu hide">
        <%= form_for @coffee_gift, url: cafe_coffee_gifts_path(cafe) do |f| %>
          <% cafe.menu_items.each do |item| %>
            <br>
            <%= radio_button_tag :menu_item, item.id %>
            <%= label_tag :menu_item, "#{item.name}: #{format_price(item.price)}" %>
          <% end %><br>
          <%= f.submit "Send coffee!", :class=>"button send-coffee" %>
        <% end %>
        </div>
      <br>
    </figcaption>
  </figure>
<% end %>
