<script>
$(window).resize(function() {
  var height = $(window).height();

  if ($(window).width() < 641){
    $("#mapOfCafes").height((height/2) - 79);
    $(".cafes-list-view").height((height/2) - 79);
    $(".footer").hide();
  }
  else{
    $("#mapOfCafes").height(height);
    $(".cafes-list-view").height(height);
    $(".footer").show();

  }
});
</script>

<div class="row">
  <div class="cafes-map-view small-12 medium-6 large-6 columns" id="mapOfCafes">
   <input id="address" type="hidden" value="183 Monroe ST, Brooklyn, NY" >
  </div>
  
  <div class="cafes-list-view small-12 medium-6 large-6 columns">
    <%= render @cafes %>
  </div>
</div>















