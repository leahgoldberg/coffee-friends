<script>
$(window).resize(function() {
  if ($(window).width() < 641){
    height = $(window).height();
    $("#mapOfCafes").height(height/2);
  }
  else{
    $("#mapOfCafes").height(height);
  }
});
</script>

<div class="row">
  <div class="cafes-map-view small-12 medium-6 large-6 columns" id="mapOfCafes" data-equalizer>
   <input id="address" type="hidden" value="183 Monroe ST, Brooklyn, NY" data-equalizer-watch>
  </div>
  
  <div class="cafes-list-view small-12 medium-6 large-6 columns panel" data-equalizer-watch>
    <%= render @cafes %>
  </div>
</div>















