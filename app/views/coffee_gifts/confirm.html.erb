<div class="row low_content add_content_padding">
  <% if flash[:error] %>

    <h1><%=flash[:error]%></h1>
    <hr>

  <% else  %>

    <% if flash[:notice] %>
     <h1 class="flash-notice"><%=flash[:notice]%></h1>
     <hr>
    <% end %>

    <div class="success-panel text-center">
      <p>Coffee has been sent </p>
    </div>

  <% if @coffee_gift.charitable %>
    <h4 class="text-center">
    You rock! Thank you for making someone's day a little brighter.
    <h4>
  <% elsif @coffee_gift.receiver %>

    <% if flash[:twilio_error] %>
      <div class="fail-panel-yellow text-center">
        <p><%=flash[:twilio_error]%></p>
      </div>
    <% else %>
      <h4 class="text-center">
      We'll send an SMS to <span class="bold"><%=@coffee_gift.receiver.full_name%></span>
      <h4>
    <% end %>

    <h4 class="text-center">
    They can pick up their <span class="bold"><%=@coffee_gift.name%></span> at <span class="bold"><%=@cafe.name%></span>.
     <h4>
  <% else %>
      <% if flash[:twilio_error] %>
        <div class="fail-panel-yellow text-center">
          <p><%=flash[:twilio_error]%></p>
        </div>
      <% else %>
        <h4 class="text-center">
        We'll send an SMS to <span class="bold"><%=format_phone(@coffee_gift.phone)%></span>
        <h4>
      <% end %>

      <h4 class="text-center">
      Your friend can pick up their <span class="bold"><%=@coffee_gift.name%></span> at <span class="bold"><%=@cafe.name%></span>.
       <h4>
  <% end %>

    <hr>
    <%= link_to "Back to the map!", '/cafes', :class =>"button expanded small-8 small-offset-2 medium-4 medium-offset-4 large-2 large-offset-5 columns text-centered" %>
    </div>

<%end%>
</div>
