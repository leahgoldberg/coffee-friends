<div id="user_profile" class="row">
    <div class="small-12 medium-10 medium-offset-1 columns">
      <h1 class="add_title_padding add_left_padding"><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
  </div>
</div>

  <div class="row">

    <div class="small-12 medium-10 medium-offset-1  columns">

      <div class="small-12 medium-6  columns">
      <%=cl_image_tag(@user.image_url, :width=> 200, :height=> 200)%>
      </div>

      <div class="small-12 medium-6  columns">
        <ul class="no-bullet">
          <li><span class="bold">username:</span> <%= @user.username %></li>
          <li><span class="bold">email:</span> <%= @user.email %></li>
          <li><span class="bold">phone:</span> <%= format_phone(@user.phone) %></li>
        </ul>
        <div class="panel">
          <h5>Send coffee to a friend</h5>
          <h6 class="subheader">They would love to hear from you, you attractive person you.</h6>
          <%= link_to "View CafÃ©s", root_path, class: "small button"  %>
        </div>
      </div>
    </div>
  </div>

<div class="row low_content">
  <hr>
  <div class="small-12 medium-10 medium-offset-1 columns">
    <ul class="small-block-grid-1 medium-block-grid-2">
      <li>
        <ul class="accordion" data-accordion>
          <li class="accordion-navigation">
            <a href="#received">Coffees Received (<%=@user.received_coffees.count%>)</a>
            <%if @user.received_coffees %>
            <div id="received" class="content">
              <br>
              <%= render partial: "coffee_gifts/coffee_gift", locals: {coffee_gifts: @received_coffees } %>
            </div>
            <%end%>
          </li>
        </ul>
      </li>
      <li>
        <ul class="accordion" data-accordion>
          <li class="accordion-navigation">
            <a href="#given">Coffees Sent (<%=@user.given_coffees.count%>)</a>
            <% if @user.given_coffees %>
            <div id="given" class="content">
              <br>
              <%= render partial: "coffee_gifts/sent_coffee_gift", locals: {coffee_gifts: @given_coffees } %>
            </div>
            <%end%>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
